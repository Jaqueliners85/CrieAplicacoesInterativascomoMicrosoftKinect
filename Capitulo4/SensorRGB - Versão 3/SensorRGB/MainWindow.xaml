<Window x:Class="SensorRGB.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:k="http://schemas.microsoft.com/kinect/2013"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="239*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Image Name="imagemCamera" Grid.Row="1" />
        <CheckBox Name="chkEscalaCinza" Content="Escala cinza" HorizontalAlignment="Left" Margin="10,10,0,10" Grid.Row="2"/>
        <k:KinectSensorChooserUI Name="sensorChooserUi" HorizontalAlignment="Center" VerticalAlignment="Top" />
    </Grid>
</Window>
