<Window x:Class="Acelerometro.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="150" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Label Content="X" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="24"/>
        <Label Content="Y" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="24" Grid.Row="1"/>
        <Label Content="Z" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="24" Grid.Row="2"/>
        <Label Name="labelX" Margin="10,0" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="24" Grid.Column="1"  />
        <Label Name="labelY" Margin="10,0" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="24" Grid.Column="1" Grid.Row="1"/>
        <Label Name="labelZ" Margin="10,0" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="24" Grid.Column="1" Grid.Row="2"/>

    </Grid>
</Window>
